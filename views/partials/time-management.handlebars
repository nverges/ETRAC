  <container>
 {{!-- Title of page --}}
 <p><h1 style='text-align: center'>Time Management</h1></p>
{{!-- Requires the 'add-hours' partial --}}
 {{!-- <p><h3 style='text-align: center'>Add Hours</h3></p> --}}
    {{>add-hours}}
{{!-- Template to display table of Employee Hours information --}}
<p><h3 style='text-align: center'>Employee Hours Worked</h3></p>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Total Hours</th>
                <th>Created At</th>
                {{!-- <th>Updated At</th> --}}
                <th>Edit / Delete</th>
            </tr>
        </thead>
   
     {{#each Schedule }}
            <tr>
                <td>{{ id }} </td>
                <td>{{ EmployeeId }}</td>
                <td>{{ date_time }} </td>
                <td>{{ week }} </td>
                <td>{{ totalHours }} </td>
                <td>{{ createdAt }}</td>
                {{!-- <td>{{ updatedAt }}</td> --}}
                    <td> 
                    <form method="POST" action='/api/add-hours/:id?_method=UPDATE'>
                        <button type='submit'><span class="glyphicon glyphicon-pencil"></span></button>
                    </form>
                    <form method="POST" action='/api/add-hours/:id?_method=DELETE'>
                        <button type='submit'><span class="glyphicon glyphicon-remove-circle"></span></button>
                    </form>
                </td>
            </tr>
            </tr>
      {{/each }}      
        </tbody>
    </table>
</container>