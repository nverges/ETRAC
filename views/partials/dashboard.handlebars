<!DOCTYPE html>
<html>

<head>

    <link rel="stylesheet" href="assets/css/Data-Table.css">
    <link rel="stylesheet" href="assets/css/Data-Table1.css">

</head>

<body>


<p><h3 style='text-align: center'>All Employees</h3></p>
    <table id="example" class="table table-striped 
    table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>First name</th>
                <th>Last Name</th>
                <th>E-mail</th>
                <th>Phone #</th>
                <th>Address</th>
                <th>Username</th>
                {{!-- <th>Password</th> --}}
                <th>Admin (y/n)</th>
                <th>Created At</th>
                {{!-- <th>Updated At</th> --}}
                <th>Edit/Delete</th>
            </tr>
        </thead>
    
     {{#each Employees }}

            <tr>
                <td>{{ id }} </td>
                <td>{{ first_name }} </td>
                <td>{{ last_name }} </td>
                <td>{{ email }}</td>
                <td>{{ phone_number }}</td>
                <td>{{ address }}</td>
                <td>{{ username }}</td>
{{!--                 <td>{{ password }}</td> --}}
                <td>{{ admin }}</td>
                <td>{{ createdAt }}</td>
                {{!-- <td>{{ updatedAt }}</td> --}}
                <td> 
                    <form method="POST" action='/api/edit/:id?_method=UPDATE'>
                        <button type='submit'><span class="glyphicon glyphicon-pencil"></span></button>
                    </form>

                    <form method="POST" action='/api/employees/:id?_method=DELETE'>
                        <button type='submit'><span class="glyphicon glyphicon-remove-circle"></span></button>
                    </form>
                </td>
            </tr>

      {{/each }}      

        </tbody>
    </table>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="js/Dynamic-Table-1.js"></script>
</body>

</html>